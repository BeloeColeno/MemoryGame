<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MemoryGameApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryGame">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Экран загрузки -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        
        <!-- Главное меню -->
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Выбор режима -->
        <activity
            android:name=".ui.mode.ModeSelectionActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Настройка кооперативной игры -->
        <activity
            android:name=".ui.mode.CoopSetupActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Выбор уровня -->
        <activity
            android:name=".ui.levels.LevelSelectActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Настройки -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Статистика -->
        <activity
            android:name=".ui.statistics.StatisticsActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Игровой экран -->
        <activity
            android:name=".ui.game.GameActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Кооперативный игровой экран -->
        <activity
            android:name=".ui.game.CoopGameActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Онлайн лобби -->
        <activity
            android:name=".ui.online.OnlineLobbyActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Комната ожидания -->
        <activity
            android:name=".ui.online.OnlineWaitingRoomActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        
        <!-- Онлайн игра -->
        <activity
            android:name=".ui.online.OnlineGameActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
    </application>

</manifest>