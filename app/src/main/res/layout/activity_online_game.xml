<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuscreen">

    <!-- Индикатор хода -->
    <View
        android:id="@+id/viewTurnIndicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/player_turn_active"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Панель счета -->
    <LinearLayout
        android:id="@+id/layoutScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#80000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTurnIndicator">

        <!-- Счет игрока 1 -->
        <TextView
            android:id="@+id/tvHostScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Игрок 1: 0 пар"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- Индикатор хода -->
        <TextView
            android:id="@+id/tvTurnIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваш ход"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />

        <!-- Счет игрока 2 -->
        <TextView
            android:id="@+id/tvGuestScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Игрок 2: 0 пар"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end" />

    </LinearLayout>

    <!-- Сетка карточек -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutScore" />

</androidx.constraintlayout.widget.ConstraintLayout>
