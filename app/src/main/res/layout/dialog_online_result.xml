<?xml version="1.0" encoding="utf-8"?>
<!-- Диалог завершения онлайн игры -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <!-- Ленточка "Game Over" сверху -->
    <ImageView
        android:id="@+id/ivRibbon"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/levelcompleteribbon"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Game Over Ribbon" />

    <!-- Фон с изображением levelcomplete -->
    <ImageView
        android:id="@+id/ivLevelComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/levelcomplete"
        android:scaleType="fitCenter"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toBottomOf="@id/ivRibbon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Level Complete" />

    <!-- Контейнер с результатом и счетом (вместо звезд) -->
    <LinearLayout
        android:id="@+id/llResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/ivLevelComplete"
        app:layout_constraintBottom_toBottomOf="@id/ivLevelComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <!-- Результат (Победа/Ничья/Поражение) -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ПОБЕДА!"
            android:textColor="#4CAF50"
            android:textSize="48sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="16dp" />

        <!-- Счет игрока 1 -->
        <TextView
            android:id="@+id/tvPlayer1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Игрок 1: 4 пары"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="8dp" />

        <!-- Счет игрока 2 -->
        <TextView
            android:id="@+id/tvPlayer2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Игрок 2: 2 пары"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Контейнер для кнопки внизу -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/ivLevelComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp">

        <!-- Кнопка "В меню" -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:scaleType="fitCenter"
            android:contentDescription="Menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
