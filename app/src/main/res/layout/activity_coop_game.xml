<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <!-- Фоновый фильтр текущего игрока -->
    <View
        android:id="@+id/viewPlayerBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.15"
        android:background="#2196F3" />

    <!-- Кнопка "В меню" -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Menu" />

    <!-- Верхняя информационная панель -->
    <LinearLayout
        android:id="@+id/layoutTopInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMenu"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Информация Игрока 1 (слева) -->
        <LinearLayout
            android:id="@+id/layoutPlayer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/tvPlayer1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Игрок 1"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <TextView
                android:id="@+id/tvPlayer1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 • 0 пар"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />
        </LinearLayout>

        <!-- Таймер и индикатор хода (центр) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:30"
                android:textColor="#9C27B0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tvCurrentTurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ход игрока 1"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />
        </LinearLayout>

        <!-- Информация Игрока 2 (справа) -->
        <LinearLayout
            android:id="@+id/layoutPlayer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvPlayer2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Игрок 2"
                android:textColor="#F44336"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <TextView
                android:id="@+id/tvPlayer2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 • 0 пар"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />
        </LinearLayout>
    </LinearLayout>

    <!-- Игровое поле -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTopInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>
